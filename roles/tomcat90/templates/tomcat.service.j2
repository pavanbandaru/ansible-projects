[Unit]
Description=tomcat service
After=network.target

[Service]
User=osboxes
Group=osboxes
Type=oneshot
ExecStart=/home/osboxes/instances/{{ tomcat_instance }}/bin/startup.sh
ExecStop=/home/osboxes/instances/{{ tomcat_instance }}/bin/shutdown.sh
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
